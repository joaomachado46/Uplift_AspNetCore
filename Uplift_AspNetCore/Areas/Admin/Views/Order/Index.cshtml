@using Uplift.Utility
@{
    ViewData["Title"] = "Order's List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{ 
    var status = Context.Request.Query["status"];

    var pending = "text-primary";
    var aproved = "text-primary";
    var all = "text-primary";

    if (status == "pending") 
    {
        pending = "text-white";
    } else if (status == "aproved")
    {
        aproved = "text-white";
    } else if (status == "all")
    {
        all = "text-white";
    }
}

<div class="backgroundWhite col-12">
    <div class="row">
        <div class=" col-6 text-primary">
            <h1>@ViewData["Title"]</h1>
        </div>
        <div class="col-6 text-right">
            <div>
                <a class="btn btn-info @pending" asp-controller="Order" asp-route-status="pending">Pending</a>
                <a class="btn btn-info @aproved"  asp-controller="Order" asp-route-status="aproved">Aproved</a>
                <a class="btn btn-info @all"  asp-controller="Order" asp-route-status="all">All</a>
            </div>
        </div>
    </div>
    <br />
    <div>
        <table id="tblDataOrder" class="table table-striped table-bordered" style="width:100%; color:black">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>ServiceCount</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            
        </table>
    </div>
</div>
@section Scripts{ 
    <script src="~/js/order.js"></script>
}


