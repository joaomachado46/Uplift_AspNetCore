@model Uplift.DataModels.ViewModels.HomeVM

@foreach (var category in Model.CategoryList.OrderBy(o=> o.DisplayOrder))
{
    
    <div class="row container pb-3 backgroundWhite">
        <div class="col-12">
            <div class="row">
                <h2 class="text-success">@category.Name</h2>
            </div>
            <div class="col-12">
                <div class="row my-3">
                    @foreach (var service in Model.SeviceList.Where(c => c.CategoryId == category.Id))
                    {
                        <div class="col-lg-4 col-xl-3 col-md-6 pb-4">
                            <div class="card" style="border: 2px solid #279f45; border-radius:5px; background:url('/Images/leaves.png')">
                                <div class="text-center pl-3 pl-1">
                                    <h3 class="card-title text-primary">@service.Name</h3>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <div class="pl-2 text-muted">Price per service</div>
                                    <div class="text-danger pl-2 h5">€ @service.Price</div>
                                </div>
                                <div>
                                    <img src="@service.ImageUrl" class="card-img-top p-2 rounded" alt="Alternate Text" />
                                </div>
                                <div>
                                    <a asp-action="Details" class="btn btn-success" asp-route-id="@service.Id" style="width:100%; border-radius:2px">Details</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}
